<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tessenger.Client.Root_Page"
             
             BackgroundColor="{AppThemeBinding Light=white , Dark=black}"
             Loaded="ContentPage_Loaded"
             Shell.NavBarIsVisible="False"
             Title="Root_Page">

    <Grid  RowDefinitions="* , 20 , 100 , 20">
        <Image Source="my_app_logo.png" WidthRequest="250" HeightRequest="250"></Image>
        <ProgressBar ProgressColor="Aqua" Progress="0.5" x:Name="progressBar" HorizontalOptions="Center" WidthRequest="200" Grid.Row="1"></ProgressBar>
        <Image HorizontalOptions="Center" Margin="0,5,0,0" VerticalOptions="Start" WidthRequest="100" Grid.Row="2" Source="companilogo.png"></Image>
        <Label Text="Tessenger V1.0.0" FontSize="12" HorizontalOptions="Center" Grid.Row="3"></Label>
    </Grid>
</ContentPage>